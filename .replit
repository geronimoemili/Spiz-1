run = "python3.11 main.py"
modules = ["python-3.11"]

[nix]
packages = ["cargo", "fetchutils", "glibcLocales", "libiconv", "libxcrypt", "python37", "rustc", "zip", "lsof"]

[[ports]]
localPort = 8080
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["python3.11", "main.py"]
build = ["python3.11", "-m", "pip", "install", "--break-system-packages", "-r", "requirements.txt"]
healthcheckPath = "/health"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3.11 main.py"
waitForPort = 8080

[agent]
expertMode = true
